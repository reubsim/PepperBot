<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical"
    android:layout_width="1280px"
    android:layout_height="800px">

    <!-- Header Bar -->
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="#00FF00"
        android:padding="16dp">
        <!-- Add your header content here -->
    </LinearLayout>

    <LinearLayout
        android:orientation="vertical"
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <!-- Rest of your layout content here -->
        <TextView
            android:id="@+id/titleTextView"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Which Service Do You Require?"
            android:textSize="24sp"
            android:textStyle="bold"
            android:gravity="center"/>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_weight="1"
            android:orientation="horizontal">

            <LinearLayout
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_weight="1"
                android:orientation="vertical"
                android:padding="8dp">

                <TextView
                    android:id="@+id/sa"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:text="Scholarship &amp; Awards"
                    android:gravity="center"
                    android:background="#00FF00"
                    android:padding="8dp"/>

            </LinearLayout>

            <LinearLayout
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_weight="1"
                android:orientation="vertical"
                android:padding="8dp">

                <TextView
                    android:id="@+id/fa"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:text="Financial Assistance"
                    android:gravity="center"
                    android:background="#00FF00"
                    android:padding="8dp"/>

            </LinearLayout>

            <LinearLayout
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_weight="1"
                android:orientation="vertical"
                android:padding="8dp">

                <TextView
                    android:id="@+id/sc"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:text="Student Care"
                    android:gravity="center"
                    android:background="#00FF00"
                    android:padding="8dp"/>

            </LinearLayout>

        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_weight="1"
            android:orientation="horizontal">

            <LinearLayout
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_weight="1"
                android:orientation="vertical"
                android:padding="8dp">

                <TextView
                    android:id="@+id/it"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:text="IT Enhanced Learning Experience"
                    android:gravity="center"
                    android:background="#00FF00"
                    android:padding="8dp"/>

            </LinearLayout>

            <LinearLayout
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_weight="1"
                android:orientation="vertical"
                android:padding="8dp">

                <TextView
                    android:id="@+id/is"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:text="International Students"
                    android:gravity="center"
                    android:background="#00FF00"
                    android:padding="8dp"/>

            </LinearLayout>

            <LinearLayout
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_weight="1"
                android:orientation="vertical"
                android:padding="8dp">

                <TextView
                    android:id="@+id/others"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:text="Others"
                    android:gravity="center"
                    android:background="#00FF00"
                    android:padding="8dp"/>

            </LinearLayout>

        </LinearLayout>

    </LinearLayout>

</LinearLayout>
