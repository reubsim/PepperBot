<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <!-- Green top bar -->
    <View
        android:layout_width="match_parent"
        android:layout_height="40dp"
        android:background="#82bf45"
        android:layout_alignParentTop="true" />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical"
        android:gravity="center">

        <!-- Header text -->
        <TextView
            android:id="@+id/tvGuidance"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="64dp"
            android:layout_marginBottom="64dp"
            android:text="Guidance and Entertainment"
            android:textSize="48sp" />

        <!-- Button section -->
        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="32dp"
            android:layout_marginBottom="32dp"
            android:orientation="horizontal"
            android:gravity="center">

            <!-- View Map Button -->
            <Button
                android:id="@+id/buttonViewMap"
                android:layout_width="200dp"
                android:layout_height="80dp"
                android:layout_marginRight="8dp"
                android:layout_marginBottom="8dp"
                android:onClick="openMapActivity"
                android:text="View Map"
                android:textSize="24sp" />/>

            <!-- Entertain Button -->
            <Button
                android:id="@+id/buttonEntertain"
                android:layout_width="200dp"
                android:layout_height="80dp"
                android:layout_marginLeft="8dp"
                android:layout_marginBottom="8dp"
                android:onClick="openEntertainActivity"
                android:text="Entertain"
                android:textSize="24sp" />

        </LinearLayout>

    </LinearLayout>

</RelativeLayout>
